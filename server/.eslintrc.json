{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "prettier/@typescript-eslint"
    ],
    "env": {"node": true},
    "rules": {
        "semi": "off",
        "indent": "off",
        "@typescript-eslint/indent": "off"
    }
}
